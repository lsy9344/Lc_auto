{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/your-repo/lc_auto/config.schema.json",
  "title": "Lc_auto Configuration Schema",
  "description": "Configuration schema for Lc_auto Windows launcher application",
  "type": "object",
  "required": ["media", "automation", "paths", "alerts", "ui"],
  "properties": {
    "media": {
      "type": "object",
      "description": "Media playback configuration",
      "required": ["videoPath"],
      "properties": {
        "videoPath": {
          "type": "string",
          "description": "Path to the background installation video file (absolute path recommended)",
          "minLength": 1,
          "examples": ["C:\\Media\\background_installation.mp4"]
        },
        "playerPath": {
          "type": "string",
          "description": "Path to custom video player executable. Empty string uses OS default player. Invalid path shows error without fallback.",
          "default": "",
          "examples": ["", "C:\\Program Files\\VLC\\vlc.exe"]
        }
      }
    },
    "automation": {
      "type": "object",
      "description": "Lightroom Classic automation configuration",
      "required": ["p1", "p2", "timeoutSec"],
      "properties": {
        "p1": {
          "type": "object",
          "description": "Automation for button a (촬영 시작)",
          "required": ["featureId", "description"],
          "properties": {
            "featureId": {
              "type": "string",
              "description": "Feature selector ID for Lightroom automation (mapped in FeatureSelectorRegistry)",
              "minLength": 1,
              "examples": ["Lightroom.StartPhotoSession"]
            },
            "description": {
              "type": "string",
              "description": "Human-readable description of this automation",
              "examples": ["촬영 시작 자동화"]
            }
          }
        },
        "p2": {
          "type": "object",
          "description": "Automation for button b (내보내기)",
          "required": ["featureId", "description"],
          "properties": {
            "featureId": {
              "type": "string",
              "description": "Feature selector ID for Lightroom automation (mapped in FeatureSelectorRegistry)",
              "minLength": 1,
              "examples": ["Lightroom.ExportPhotos"]
            },
            "description": {
              "type": "string",
              "description": "Human-readable description of this automation",
              "examples": ["내보내기 자동화"]
            }
          }
        },
        "timeoutSec": {
          "type": "integer",
          "description": "Timeout per automation attempt in seconds (initial attempt + 2 retries = max 3 attempts total)",
          "minimum": 10,
          "maximum": 60,
          "default": 30
        }
      }
    },
    "paths": {
      "type": "object",
      "description": "File system paths configuration",
      "required": ["targetFolder"],
      "properties": {
        "targetFolder": {
          "type": "string",
          "description": "Path to photo storage folder (opened by button d). Shows error if nonexistent.",
          "minLength": 1,
          "examples": ["C:\\Photos\\Output"]
        }
      }
    },
    "alerts": {
      "type": "array",
      "description": "Scheduled alert popup configuration",
      "items": {
        "type": "object",
        "required": ["time", "message"],
        "properties": {
          "time": {
            "type": "string",
            "description": "Alert trigger time in HH:mm format (local time, ±1s tolerance)",
            "pattern": "^([01][0-9]|2[0-3]):[0-5][0-9]$",
            "examples": ["09:00", "14:00", "18:30"]
          },
          "message": {
            "type": "string",
            "description": "Alert message displayed in modal popup",
            "minLength": 1,
            "examples": ["오전 촬영 시작", "오후 촬영 시작"]
          },
          "repeat": {
            "type": "string",
            "description": "Repeat frequency: 'daily' (every day) or 'once' (single trigger)",
            "enum": ["daily", "once"],
            "default": "daily"
          }
        }
      },
      "default": []
    },
    "ui": {
      "type": "object",
      "description": "UI behavior configuration",
      "required": ["alwaysOnTop", "theme"],
      "properties": {
        "alwaysOnTop": {
          "type": "boolean",
          "description": "Enable always-on-top window behavior (should be true for intended use)",
          "default": true
        },
        "theme": {
          "type": "string",
          "description": "ModernWpf theme mode",
          "enum": ["auto", "light", "dark"],
          "default": "auto"
        }
      }
    }
  },
  "additionalProperties": false
}